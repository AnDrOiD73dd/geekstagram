<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_general_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.GeneralFragment">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_images_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/content_padding"
        android:scrollbars="vertical"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floating_action_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fab_margin"
        android:layout_gravity="bottom|end"
        app:srcCompat="@drawable/ic_add_24dp_vector"
        app:fabSize="auto"
        app:layout_anchor="@id/rv_images_list"
        app:layout_anchorGravity="bottom|end"
        app:layout_behavior="@string/scroll_aware_fab_behavior"
        style="@style/Widget.Design.FloatingActionButton"/>

</android.support.design.widget.CoordinatorLayout>