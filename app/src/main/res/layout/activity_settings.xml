<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.SettingsActivity">

    <ImageView
        android:id="@+id/iv_theme_standard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_launcher_background"/>

    <android.support.v7.widget.AppCompatRadioButton
        android:id="@+id/rb_theme_standard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/settings_theme_title_default"
        android:layout_toEndOf="@id/iv_theme_standard"/>

    <ImageView
        android:id="@+id/iv_theme_dark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_launcher_background"
        android:layout_below="@id/iv_theme_standard"/>

    <android.support.v7.widget.AppCompatRadioButton
        android:id="@+id/rb_theme_dark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/settings_theme_title_dark"
        android:layout_below="@id/iv_theme_standard"
        android:layout_toEndOf="@id/iv_theme_dark"/>


</RelativeLayout>